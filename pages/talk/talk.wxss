page {
  background-color: whitesmoke;
}
.warpper {
  position: relative;
}
.warpper .talk .list_warpper .list .left {
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
}
.warpper .talk .list_warpper .list .left .avatar image {
  margin-left: 15rpx;
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
}
.warpper .talk .list_warpper .list .left .tri {
  width: 0px;
  height: 0px;
  border: 10rpx solid transparent;
  border-right-color: #2ECC40;
  margin-top: 20rpx;
}
.warpper .talk .list_warpper .list .left .mess {
  height: auto;
  width: auto;
  padding: 15rpx;
  margin-right: 125rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #2ECC40;
}
.warpper .talk .list_warpper .list .left .mess text {
  font-size: 30rpx;
}
.warpper .talk .list_warpper .list .right {
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.warpper .talk .list_warpper .list .right .avatar image {
  margin-right: 15rpx;
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
}
.warpper .talk .list_warpper .list .right .tri {
  width: 0px;
  height: 0px;
  border: 10rpx solid transparent;
  border-left-color: #2ECC40;
  margin-top: 20rpx;
}
.warpper .talk .list_warpper .list .right .mess {
  height: auto;
  margin-left: 125rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: #2ECC40;
}
.warpper .talk .list_warpper .list .right .mess text {
  font-size: 30rpx;
  padding: 15rpx;
}
.warpper .input_warpper {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 80rpx;
  width: 100%;
  background-color: #fff;
  z-index: 99999;
  display: flex;
  align-items: center;
}
.warpper .input_warpper .input {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 60rpx;
}
.warpper .input_warpper .input input {
  flex: 1;
  border-radius: 30rpx;
  background-color: whitesmoke;
  margin: 0 15rpx;
  padding-left: 20rpx;
  height: 100%;
}
.warpper .input_warpper .input button {
  height: auto;
  width: 120rpx;
  margin-right: 15rpx;
}
